<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/total_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:id="@+id/stock_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_slot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:text="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_title_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[4565]"
                        style="@style/TextDefault"/>

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="NEW"
                        style="@style/TextDefault"
                        android:textStyle="bold"
                        android:textColor="@color/colorGreen"/>

                    <TextView
                        android:id="@+id/tv_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        style="@style/TextDefault"
                        android:text="[DL]"/>
                    <TextView
                        android:id="@+id/tv_stock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:focusable="true"
                        android:singleLine="true"
                        android:scrollHorizontally="true"
                        android:text="Nature in Art - Jan to August 2017"
                        style="@style/TextDefault"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_stock_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextDefault"
                        android:textStyle="bold"
                        android:textColor="@color/colorLightBlue"
                        android:text="FULL"/>

                    <TextView
                        android:id="@+id/tv_row_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextDefault"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:textColor="@color/colorRemove"
                        android:text="ROW 1"/>

                    <TextView
                        android:id="@+id/tv_slot_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        style="@style/TextDefault"
                        android:textStyle="bold"
                        android:textColor="@color/colorRemove"
                        android:text="SLOT 2"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>